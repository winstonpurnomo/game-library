{
  "name": "2026-02-09-game-mono",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "eslint-plugin-react-refresh": "^0.5.0",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "turbo": "^2.8.3",
    "typescript": "5.9.3",
    "ultracite": "7.1.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,mts,cts}": [
      "oxfmt --write",
      "oxlint --fix",
      "oxlint"
    ],
    "*.{json,jsonc,css,scss,md,mdx,yml,yaml,html}": "oxfmt --write"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.9"
}
